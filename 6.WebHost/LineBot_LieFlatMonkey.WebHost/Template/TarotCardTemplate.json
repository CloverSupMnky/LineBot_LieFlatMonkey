{
    "type": "bubble",
    "hero": {
        "type": "image",
        "url": "{#ImageUrl}",
        "size": "full",
        "aspectRatio": "4:3",
        "aspectMode": "fit",
        "align": "center"
    },
    "body": {
        "type": "box",
        "layout": "vertical",
        "contents": [
            {
                "type": "text",
                "text": "{#Name}-{#NameEN}({#FaceType})",
                "weight": "bold",
                "size": "md",
                "wrap": true,
                "align": "center"
            },
            {
                "type": "text",
                "contents": [
                    {
                        "type": "span",
                        "text": "塔羅牌意義 : "
                    },
                    {
                        "type": "span",
                        "text": "{#Mean}"
                    }
                ],
                "size": "md",
                "weight": "bold",
                "align": "center"
            },
            {
                "type": "box",
                "layout": "horizontal",
                "contents": [
                    {
                        "type": "text",
                        "text": "關鍵字 : ",
                        "size": "md",
                        "flex": 2,
                        "weight": "bold"
                    },
                    {
                        "type": "text",
                        "text": "{#MeanWord}",
                        "wrap": true,
                        "flex": 6
                    }
                ]
            },
            {
                "type": "text",
                "text": "----------",
                "align": "center"
            },
            {
                "type": "box",
                "layout": "horizontal",
                "contents": [
                    {
                        "type": "text",
                        "text": "{#Desc}",
                        "wrap": true
                    }
                ]
            },
            {
                "type": "text",
                "text": "----------",
                "align": "center"
            }
        ],
        "spacing": "sm"
    },
    "footer": {
        "type": "box",
        "layout": "vertical",
        "spacing": "sm",
        "contents": [
            {
                "type": "text",
                "text": "版權聲明",
                "weight": "bold",
                "size": "lg",
                "align": "center",
                "color": "#FF3333"
            },
            {
                "type": "text",
                "align": "center",
                "weight": "bold",
                "contents": [
                    {
                        "type": "span",
                        "text": "以上內容均為 "
                    },
                    {
                        "type": "span",
                        "text": "Ta19",
                        "weight": "bold",
                        "decoration": "underline",
                        "size": "lg",
                        "color": "#FF3333"
                    },
                    {
                        "type": "span",
                        "text": " 所有"
                    }
                ]
            },
            {
                "type": "text",
                "text": "更多相關內容歡迎至原作者網站查看",
                "wrap": true,
                "weight": "bold"
            },
            {
                "type": "text",
                "text": "https://ta19.site/",
                "action": {
                    "type": "uri",
                    "label": "action",
                    "uri": "https://ta19.site/"
                },
                "weight": "bold",
                "align": "center",
                "color": "#0000FF",
                "decoration": "underline",
                "size": "lg"
            }
        ],
        "offsetBottom": "lg"
    }
}